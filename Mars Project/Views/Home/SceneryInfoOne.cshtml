        $('header').attr('style', 'background-color: #000000; height: 0px; position: relative; border-top: 2px solid #ae130c; border-bottom: 2px solid #ae130c; background-position-x: center;');

        function HTMLEncode(html) {
            var temp = document.createElement("div");
            (temp.textContent != null) ? (temp.textContent = html) : (temp.innerText = html);
            var output = temp.innerHTML;
            temp = null;
            return output;
        }
        function HTMLDecode(text) {
            var temp = document.createElement("div");
            temp.innerHTML = text;
            var output = temp.innerText || temp.textContent;
            temp = null;
            return output;
        }

    </script>
}
