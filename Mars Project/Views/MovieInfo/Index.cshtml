@{
    ViewBag.Title = "Index";
}

<style>
    img {
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
    }
</style>

<h2>电影推荐管理</h2>

<table class="layui-hide" id="test" lay-filter="test"></table>

<script type="text/html" id="toolbarDemo">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm" lay-event="addDate">添加数据</button>
    </div>
</script>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>


<script>
    layui.use('table', function () {
        var table = layui.table;
        var $ = layui.jquery ;


        tableIns = table.render({
            elem: '#test'
            , method: 'post'
            , url: '/MovieInfo/GetPageInfo/'
            , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板
            , defaultToolbar: ['filter', 'exports', 'print']
            , title: '用户数据表'
            , height: 700
            , cols: [[
                { type: 'checkbox', fixed: 'left' }
                , { field: 'Id', title: 'ID', width: 80, fixed: 'left', unresize: true, sort: true }
                , { field: 'Name', title: '标题', width: 120 }               
                , {
                    field: 'Image', title: '图片', minWidth: 80, templet: function (r) {
                        return '<img src="' + r.Image + '" />';
                    }
                }
                , { field: 'Rating', title: '评分', width: 80 }
                , { field: 'Cast', title: '演员', width: 120 }
                , { field: 'Direction', title: '导演', width: 120 }
                , { field: 'Genre', title: '类型', width: 120 }
                , { field: 'Duration', title: '影片时常', width: 120 }
                , {
                    field: 'CreateTime', title: '创建时间', width: 120, templet: function(r) {
                        let val = r.CreateTime;
                        if (val != null) {
                            let date = new Date(parseInt(val.replace("/Date(", "").replace(")/", ""), 10));
                            let month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                            let currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                            return date.getFullYear() + "-" + month + "-" + currentDate;
                        }
                        return "";
                    }
                }
                , {
                    field: 'ModifyTime', title: '修改时间', width: 120, templet: function (r) {
                        let val = r.ModifyTime;
                        if (val != null) {
                            let date = new Date(parseInt(val.replace("/Date(", "").replace(")/", ""), 10));
                            let month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                            let currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                            return date.getFullYear() + "-" + month + "-" + currentDate;
                        }
                        return "";
                    }
                }
                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
            ]]            , page: true
        });

        //头工具栏事件
        table.on('toolbar(test)', function (obj) {
            //var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'addDate':
                    addDialog(null);
                    break;
            };
        });

        //监听行工具事件
        table.on('tool(test)', function (obj) {
            var data = obj.data;
            if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    obj.del();
                    layer.close(index);
                    request("/MovieInfo/DoDeleInfo", { id: data.Id }, function (data) {
                        if (data.code > 0) {
                            layer.msg('删除成功');
                            tableIns.reload();
                        } else {
                            layer.msg('删除失败');
                        }
                    });
                });
            } else if (obj.event === 'edit') {
                editDialog(data);
            }
        });

        function addDialog(data) {
            layer.open({
                type: 2
                , id: 'info'
                , title: '添加数据'
                , area: ['1100px', '700px']
                , shade: 0
                , content: "/MovieInfo/AddInfo"
                , btn: ['添加', '关闭']
                , yes: function (index, layero) {
                    let body = layer.getChildFrame('body', index);
                    let iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象
                    iframeWin.submit(); //执行iframe页的方法
                }
                , success: function (layero) {
                    layer.setTop(layero);
                }
            });
        }

        function editDialog(data) {
            layer.open({
                type: 2
                , id: 'info'
                , title: '修改数据'
                , area: ['1100px', '700px']
                , shade: 0
                , content: "/MovieInfo/ModifyInfo/" + data.Id
                , btn: ['修改', '关闭']
                , yes: function (index, layero) {
                    let body = layer.getChildFrame('body', index);
                    let iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象
                    iframeWin.submit(); //执行iframe页的方法
                }
                , success: function (layero) {
                    layer.setTop(layero);
                }
            });

        }

        function request(url, requestData, successCallBack) {
            console.log(requestData);
            $.ajax({
                type: 'post',
                url: url,
                dataType: 'json',
                data: requestData,
                success: function (data) {
                    console.log("请求成功");
                    if (successCallBack != null) successCallBack(data);
                },
                error: function (xhr, textStatus) {
                    console.log(xhr);
                }
            });
        }
    });







</script>
