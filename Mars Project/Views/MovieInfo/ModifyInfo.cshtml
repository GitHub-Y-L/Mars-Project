@Styles.Render("~/Style/layui")
@Scripts.Render("~/Script/layui")

@model Mars_Project.Models.MovieInfo
<style>
    .DialogContent {
        margin: 0px 24px 0px 24px;
    }
</style>

<div class="DialogContent">
    <script src="~/Content/ueditor/ueditor.config.js"></script>
    <script src="~/Content/ueditor/ueditor.all.min.js"></script>
    <script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>

    <form class="layui-form" action="" style="margin-top:20px" id="form1">
        <input name="Id" type="hidden" value="@Model.Id">
        <div class="layui-form-item">
            <label class="layui-form-label">标题</label>
            <div class="layui-input-block">
                <input type="text" name="Name" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Name">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">英文标题</label>
            <div class="layui-input-block">
                <input type="text" name="NameEn" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.NameEn">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">图片</label>
            @* 验证图片必须选择 lay-verify="required" lay-reqtext="必须选择图片" 没有选择图片时的提示信息*@
            <input type="hidden" id="pic" required lay-verify="required" value="@Model.Image" lay-reqtext="必须选择图片" />
            <div class="layui-input-inline">
                <div class="layui-upload">
                    <button type="button" class="layui-btn" id="test1">上传图片</button>
                    <div class="layui-upload-list">
                        <img class="layui-upload-img" id="imgShow" src="@Model.Image" style="height:150px;width:150px">
                        <p id="demoText"></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">评分</label>
            <div class="layui-input-block">
                <input type="text" name="Rating" required lay-verify="required number" autocomplete="off" class="layui-input" value="@Model.Rating">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">演员</label>
            <div class="layui-input-block">
                <input type="text" name="Cast" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Cast">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">导演</label>
            <div class="layui-input-block">
                <input type="text" name="Direction" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Direction">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">类型</label>
            <div class="layui-input-block">
                <input type="text" name="Genre" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Genre">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">影片时常</label>
            <div class="layui-input-block">
                <input type="text" name="Duration" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Direction">
            </div>
            <div class="layui-form-mid layui-word-aux"> </div>
        </div>

        <textarea id="UEContent" name="UEContent">@Model.UEContent</textarea>
        <button id="SubmitBtn" style="display:none" class="layui-btn" lay-submit lay-filter="formDemo">提交</button>
    </form>

    <script type="text/javascript">
        var editor = new baidu.editor.ui.Editor({
            UEDITOR_HOME_URL: '/Content/ueditor/',//配置编辑器路径
            iframeCssUrl: '/Content/ueditor/themes/iframe.css',//样式路径
            autoHeightEnabled: false,//高度自动增长
            minFrameHeight: 700,//最小高度
            initialFrameHeight: 300
        });
        editor.render('UEContent');
    </script>

</div>


<script>
    //父页面调用
    function submit() {
        layui.use('jquery', function () {
            var $ = layui.jquery;
            $("#SubmitBtn").click();
        });
    }

    //初始化表单使用
    layui.use(['form', 'upload', 'jquery'], function () {
        var form = layui.form
            , $ = layui.jquery
            , upload = layui.upload;

        //监听提交
        form.on('submit(formDemo)', function (data) {
            $.ajax({
                url: '/MovieInfo/DoModifyInfo'
                , type: 'post'
                , data: new FormData($("#form1")[0]) //提交的数据
                , dataType: 'json' // 返回值类型
                , contentType: false  //jax 中 contentType 设置为 false 是为了避免 JQuery 对其操作，从而失去分界符，而使服务器不能正常解析文件
                , processData: false  //当设置为true的时候,jquery ajax 提交的时候不会序列化 data，而是直接使用data
                , success: function (res) {
                    if (res.code > 0) {
                        layer.msg('修改成功！');
                        setTimeout(function () {
                            layer.close(index);
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layer.close(index); //再执行关闭
                            parent.tableIns.reload();
                        }, 600);


                    }
                }
            });
            return false;
        });

        //普通图片上传
        var uploadInst = upload.render({
            elem: '#test1'
            , auto: false
            , choose: function (obj) {

                //预读本地文件示例，不支持ie8
                obj.preview(function (index, file, result) {
                    $('#imgShow').attr('src', result); //图片链接（base64）
                    $("#pic").val("已选择图片");
                });
            }
        });

    });


</script>